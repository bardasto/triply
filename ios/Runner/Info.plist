        <key>CFBundleURLSchemes</key>
        <array>
          <string>com.googleusercontent.apps.665769132607-18ev940mo9u1ejfkahn043u6urlehipq</string>
        </array>
      </dict>

      <!-- Ваша схема deep link -->
      <dict>
        <key>CFBundleURLName</key>
        <string>triply</string>
        <key>CFBundleURLSchemes</key>
        <array>
          <string>triply</string>
        </array>
      </dict>
    </array>

    <!-- ✅ GOOGLE MAPS API KEY -->
    <key>GOOGLE_MAPS_API_KEY</key>
    <string>$(GOOGLE_MAPS_API_KEY)</string>
    
